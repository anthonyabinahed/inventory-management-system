{
  "name": "stock-management",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "create-admin": "node supabase/create-first-admin.js",
    "create-admin:local": "node supabase/create-first-admin.js --local",
    "create-admin:staging": "node supabase/create-first-admin.js --staging",
    "db:link:staging": "npx supabase link --project-ref xpejogsvvskpmvvfievz",
    "db:link:prod": "npx supabase link --project-ref yzrbgdymgwlzrfhtmxyv",
    "db:push:staging": "npm run db:link:staging && npx supabase db push --linked",
    "db:reset:staging": "npm run db:link:staging && npx supabase db reset --linked",
    "db:push:prod": "npm run db:link:prod && npx supabase db push --linked",
    "functions:deploy:staging": "npx supabase functions deploy process-export --project-ref xpejogsvvskpmvvfievz",
    "functions:deploy:prod": "npx supabase functions deploy process-export --project-ref yzrbgdymgwlzrfhtmxyv",
    "functions:serve": "npx supabase functions serve",
    "supabase:local": "npx supabase migration up && npx supabase functions serve",
    "supabase:deploy:staging": "npm run db:push:staging && npm run functions:deploy:staging",
    "supabase:deploy:prod": "npm run db:push:prod && npm run functions:deploy:prod",
    "test": "vitest run && npm run test:edge",

    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:edge": "cd supabase/functions && deno task test"
